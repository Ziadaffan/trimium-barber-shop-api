{
  "name": "trimium-barber-shop-api",
  "version": "1.0.0",
  "description": "Express API for Trimium Barber Shop",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "dotenv -e .env.local -- ts-node-dev --respawn --transpile-only src/index.ts",
    
    "format": "prettier --write .",
    "format:check": "prettier --check .",

    "container:up": "docker compose up -d",
    "container:stop": "docker compose stop",

    "migration:generate": "dotenv -e .env.local -- prisma migrate dev --create-only --name",
    "migration:run": "dotenv -e .env.local -- prisma migrate dev",
    "migration:deploy": "dotenv -e .env.local -- prisma migrate deploy",
    "prisma:generate": "dotenv -e .env.local -- prisma generate",
    "prisma:studio": "dotenv -e .env.local -- prisma studio",
    "prisma:reset": "dotenv -e .env.local -- prisma migrate reset --force"
  },
  "keywords": [
    "express",
    "typescript",
    "api",
    "barber-shop"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@prisma/client": "^6.13.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.27.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "prisma": "^6.13.0",
    "module-alias": "^2.2.3",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.3.3"
  }
}
