generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum ReservationStatus {
    PENDING
    COMPLETED
    CANCELLED
}

enum DayOfWeek {
    MONDAY
    TUESDAY
    WEDNESDAY
    THURSDAY
    FRIDAY
    SATURDAY
    SUNDAY
}

enum BarberTimeOffType {
    VACATION
    BLOCK
}

model Barber {
    id           String  @id @default(uuid())
    name         String
    email        String  @unique
    phone        String
    imageUrl     String?
    cloudinaryId String?
    googleCalendarId String? @unique

    Reservation Reservation[]
    schedules   BarberSchedule[]
    timeOffs    BarberTimeOff[]
    googleToken BarberGoogleToken?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Reservation {
    id       String            @id @default(uuid())
    barberId String
    barber   Barber            @relation(fields: [barberId], references: [id], onDelete: Cascade)
    date     DateTime
    endDate  DateTime
    status   ReservationStatus @default(PENDING)

    clientName  String
    clientPhone String
    clientEmail String

    serviceId String
    service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([date, barberId])
}

model Service {
    id           String        @id @default(uuid())
    type         String
    nameEn       String
    nameFr       String
    descriptionEn String?
    descriptionFr String?
    price        Float         @default(0)
    duration     Int           @default(60) // In minutes
    isPremium    Boolean       @default(false)
    isActive     Boolean       @default(true)
    reservations Reservation[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model BarberSchedule {
    id        String    @id @default(uuid())
    barberId  String
    barber    Barber    @relation(fields: [barberId], references: [id], onDelete: Cascade)
    dayOfWeek DayOfWeek
    startTime String // Format: "09:00"
    endTime   String // Format: "18:00"
    isActive  Boolean   @default(true)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([barberId, dayOfWeek, startTime, endTime])
}

model BarberTimeOff {
    id       String @id @default(uuid())
    barberId String
    barber   Barber @relation(fields: [barberId], references: [id], onDelete: Cascade)

    startAt  DateTime
    endAt    DateTime
    type     BarberTimeOffType @default(VACATION)
    note     String?
    isActive Boolean           @default(true)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([barberId, startAt, endAt])
}

model Product {
    id            String   @id @default(uuid())
    nameEn        String
    nameFr        String
    price         Float
    descriptionEn String?
    descriptionFr String?
    image         String
    cloudinaryId  String
    isActive      Boolean  @default(true)
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
}

model GoogleCalendarToken {
    id           String @id @default(uuid())
    calendarId   String @unique
    accessToken  String
    refreshToken String
    expiryDate   BigInt

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model BarberGoogleToken {
    id           String @id @default(uuid())
    barberId     String @unique
    barber       Barber @relation(fields: [barberId], references: [id], onDelete: Cascade)
    accessToken  String
    refreshToken String
    expiryDate   BigInt

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Comment {
    id        String   @id @default(uuid())
    name      String
    email     String
    comment   String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Gallery {
    id           String   @id @default(uuid())
    cloudinaryId String
    image        String
    position     Int
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
}
