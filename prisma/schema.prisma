generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum ReservationStatus {
    PENDING
    COMPLETED
    CANCELLED
}

enum ServiceType {
    HAIRCUT
    BEARD_TRIM
    SHAVING
    OTHER
}

enum DayOfWeek {
    MONDAY
    TUESDAY
    WEDNESDAY
    THURSDAY
    FRIDAY
    SATURDAY
    SUNDAY
}

model Barber {
    id               String  @id @default(uuid())
    name             String
    email            String  @unique
    phone            String
    googleCalendarId String?
    imageUrl         String?

    Reservation Reservation[]
    schedules   BarberSchedule[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Reservation {
    id       String            @id @default(uuid())
    barberId String
    barber   Barber            @relation(fields: [barberId], references: [id], onDelete: Cascade)
    date     DateTime
    status   ReservationStatus @default(PENDING)

    clientName  String
    clientPhone String
    clientEmail String

    serviceId String
    service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([date, barberId])
    
}

model Service {
    id           String        @id @default(uuid())
    type         ServiceType   @unique
    nameEn       String
    nameFr       String
    description  String?
    price        Float         @default(0)
    duration     Int           @default(60) // In minutes
    isPremium    Boolean       @default(false)
    isActive     Boolean       @default(true)
    reservations Reservation[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model BarberSchedule {
    id        String    @id @default(uuid())
    barberId  String
    barber    Barber    @relation(fields: [barberId], references: [id], onDelete: Cascade)
    dayOfWeek DayOfWeek
    startTime String // Format: "09:00"
    endTime   String // Format: "18:00"
    isActive  Boolean   @default(true)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([barberId, dayOfWeek, startTime, endTime])
}

model Product {
    id          String   @id @default(uuid())
    name        String
    price       Float
    description String
    images      String[]
    isActive    Boolean  @default(true)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model GoogleCalendarToken {
    id           String @id @default(uuid())
    calendarId   String @unique
    accessToken  String
    refreshToken String
    expiryDate   BigInt

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Comment {
    id        String   @id @default(uuid())
    name      String
    email     String
    comment   String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Gallery {
    id        String   @id @default(uuid())
    image     String
    position  Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}